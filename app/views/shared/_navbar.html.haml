%nav.navbar.navbar-default
  .container
    .navbar-header
      = link_to 'My Yelp', root_path, class: 'navbar-brand'
    .nav.navbar-nav
    .nav.navbar-nav.navbar-right
      - if logged_in?
        = link_to 'Logout', logout_path, method: :delete, class: 'btn btn-default navbar-btn'
      - else
        = link_to 'Login', login_path, class: 'btn btn-default navbar-btn'
        = link_to 'Register', register_path, class: 'btn btn-primary navbar-btn'
